{
  "name": "present-core",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "run-s copy:umd build:esm build:umd",
    "build:esm": "tsc -p ./tsconfig-esm.json",
    "build:umd": "tsc",
    "clean": "shx rm -rf dist",
    "copy:umd": "shx mkdir -p ./dist/umd && shx cp package.json ./dist/umd",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "run-p watch:umd watch:esm",
    "watch:umd": "npm run copy:umd && tsc -w",
    "watch:esm": "tsc -w -p ./tsconfig-esm.json"
  },
  "author": "Paul Shannon",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/uuid": "^3.4.6",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2",
    "typescript": "^3.7.4"
  }
}
