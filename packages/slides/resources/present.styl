.buttonlink {
	background: none;
	border: none;
}

.preview > * {
	max-width: 100%;
	max-height: 85vh;
}

.indicator {
	height: 0.9em;
	width: 0.9em;
	border-radius: 50%;
	display: inline-block;
	margin-right: 1em;

	&.red {
		background-color: red;
	}

	&.green {
		background-color: green;
	}
}

body.connected {
	.connected-status {
		display: block;
	}

	.disconnected-status {
		display: none;
	}

	.connect-form {
		display: none;
	}

	.authenticated-container {
		display: block;
	}
}

body.authenticated {
	.authed {
		display: block;
	}

	.unauthed {
		display: none;
	}

	.auth-controls {
		display: none;
	}
}

.connected-status {
	display: none;
}

.authed {
	display: none;
}

.auth-controls {
	margin: 10px;

	> div {
		margin-bottom: 10px;
	}
}

.authenticated-container {
	display: none;
}
