.buttonlink {
	background: none;
	border: none;
}

.preview > * {
	max-width: 100%;
	max-height: 85vh;
}

.indicator {
	height: 0.9em;
	width: 0.9em;
	border-radius: 50%;
	display: inline-block;
	margin-right: 1em;
	background-color: red;
}

body.connected {
	.indicator {
		background-color: green;
	}

	.connectedStatus {
		display: block;
	}

	.disconnectedStatus {
		display: none;
	}

	.connect-form {
		display: none;
	}
}

.connectedStatus {
	display: none;
}

.connect-form {
	display: block;
}
