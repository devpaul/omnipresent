.menu-container {
	position: absolute;
	width: 100vw;
	height: 100vh;
	display: none;
	justify-content: center;
	align-items: center;
	background: rgba(0, 0, 0, 0.2);
}

.menu-container.opened {
	display: flex;
}

.menu {
	background: white;
	z-index: 900;
	border: 5px outset rgb(200, 200, 200);
	padding: 10px;
	min-width: 500px;
	min-height: 300px;
}

.close-container {
	text-align: right;
}

.buttonlink {
	background: none;
	border: none;
}
