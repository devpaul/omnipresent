.popup-underlay {
position: absolute;
	width: 100vw;
	height: 100vh;
	display: none;
	justify-content: center;
	align-items: center;
	background: rgba(0, 0, 0, 0.2);
}

.popup-underlay.opened {
	display: flex;
}

.popup {
	background: white;
	z-index: 900;
	border: 5px outset rgb(200, 200, 200);
	padding: 10px;
	min-width: 500px;
	min-height: 300px;
	max-width: 90vw;
	max-height: 90vh;
}

.close-container {
	text-align: right;
}
